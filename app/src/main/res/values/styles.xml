<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="skin_tab_button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:text">This is my text</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="skin_submit_button">
        <item name="android:textColor">@drawable/button_press</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="skin_submit_button_child" parent="skin_submit_button">
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="skin_index_bottom_image">
        <item name="android:background">@mipmap/ic_launcher</item>
    </style>

    <style name="skin_checked_image">
        <item name="android:background">@drawable/checked_press</item>
    </style>
</resources>
